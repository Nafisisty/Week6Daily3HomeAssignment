<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/androidIconTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:drawableTop="@drawable/android"
        android:textAlignment="center"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/appleIconTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:drawableTop="@drawable/apple"
        android:textAlignment="center"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/windowsIconTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:drawableTop="@drawable/windows"
        android:textAlignment="center"
        android:onClick="onClick"/>

</merge>